                <field name="building_type"/>
              </group>
              <group>
                <field name="building_location"/>
                <field name="building_des"/>
                <field name="building_img" widget="image" class="float-left oe_avatar"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
