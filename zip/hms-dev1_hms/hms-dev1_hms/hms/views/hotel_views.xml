<odoo>
  <data>

    <!-- Top menu item -->
    <menuitem id="hotel_menu_root" name="HMS" sequence="5"/>

    <!-- menu categories -->
    <menuitem id="hotel_menu_1" name="Hotel Configuration" parent="hotel_menu_root" sequence="10"/>
    <menuitem id="hotel_menu_2" name="Room Configuration" parent="hotel_menu_root" sequence="10"/>

    <!-- ========== Hotel Property Setup ========== -->
    <!-- Property Setup Form View -->
    <record id="property_view_form" model="ir.ui.view">
      <field name="name">property.view.form</field>
      <field name="model">property.property</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
        <form string="Property">
          <sheet>

            <div class="oe_button_box" name="button_box">
              <button name="action_building_count"
                  type="object"
                  class="oe_stat_button"
                  icon="fa-tasks">
                  <field name="building_count" widget='statinfo'/>
              </button>
            </div>
            <field name="logo" placeholder="Your Logo" widget="image" class="oe_avatar"/>
            <div class="oe_title">
              <label for="hotelgroup_id" class="oe_edit_only"/>
              <h2>
                <field name="hotelgroup_id" style="width:60%%"/>
              </h2>
              <label for="name" class="oe_edit_only"/>
              <h2>
                <field name="name" string="Hotel Name" placeholder="Hotel Name" style="width:60%%"/>
              </h2>
              <label for="code" class="oe_edit_only"/>
              <h2>
                <field name="code" style="width:60%%"/>
              </h2>
            </div>
            <group>
              <group>
                <label for="address1" string="Address"/>
                <div class="o_address_format">
                  <field name="address1" placeholder="Street..." class="o_address_street"/>
                  <field name="address2" placeholder="Street 2..." class="o_address_street"/>
                  <field name="address3" placeholder="Township" class="o_address_street"/>
                  <field name="city_id" placeholder="City" class="o_address_city"/>
                  <field name="state_id" placeholder="State" class="o_address_state" options='{"no_open": True}'/>
                  <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                  <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True}'/>
                </div>
                <label for="image" string="Image"/>
                <div>
                  <field name="image" widget="image" class="float-left oe_avatar"/>
                </div>
              </group>
              <group>
                <field name="roomqty"/>
                <field name="rating"/> 
                <field name="phone"/>
                <field name="fax"/>
                <field name="email"/>
                <field name="website" widget="url"/>
                <field name="sociallink" widget="url"/>
              </group>
            </group>
            
            <notebook colspan="5">
              <page string='Contact Information' autofocus="autofocus">
                <field name="contact_ids" mode="kanban"/>
              </page>
              <page string='Bank Information'>
              </page>
              <page string='Hotel Configuration'>
                <field name="building_ids"/> 
              </page>
              <page string='Hotel License'>
                <field name="property_license"/>
              </page>
              <page string='Internal Notes'>
                <field name="comments" placeholder="Internal notes..."/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- List View of Property -->
    <record id="property_view_list" model="ir.ui.view">
      <field name="name">property.view.list</field>
      <field name="model">property.property</field>
      <field name="arch" type="xml">
        <tree string="Property">
          <field name="name"/>
          <field name="code"/>
          <field name="city_id"/>
          <field name="state_id"/>
          <field name="country_id"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="website"/>
          <field name="rating"/>
          <field name="logo"/>
        </tree>
      </field>
    </record>

        <!-- Kanban View of Property -->
    <record id="property_view_kanban" model="ir.ui.view">
      <field name="name">property.view.kanban</field>
      <field name="model">property.property</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id"/>
          <field name="logo"/>
          <field name="hotelgroup_id"/>
          <field name="name"/>
          <field name="code"/>
          <field name="city_id"/>
          <field name="country_id"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="website"/>
          <field name="rating"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img alt="" t-att-src="kanban_image('property.property', 'logo')"/>
                </div>
                <div class="oe_kanban_details">
                  <div><field name="name"/></div>
                  <div>Address: <field name="city_id"/>,<field name="country_id"/></div>
                  <div>Group: <field name="hotelgroup_id"/></div>
                  <div> Phone: <field name="phone"/></div>
                  <div> Email: <field name="email"/></div>
                  <div>Website:<field name="website"/></div>
                  <div><field name="rating"/></div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Kanban View of Contacts-->
    <record id="contact_view_kanban" model="ir.ui.view">
      <field name="name">contact.view.kanban</field>
      <field name="model">contact.contact</field>
      <field name="arch" type="xml">
        <kanban default_group_by="parent_id">
          <field name="id"/>
          <field name="name"/>
          <field name="title"/>
          <field name="position"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="image"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div>
                  <div class="o_kanban_image">
                    <img alt="" t-att-src="kanban_image('contact.contact', 'image')"/>
                  </div>
                  <div class="oe_kanban_details">
                    <field name="name"/>
                    <div><field name="position"/></div>
                    <div> Phone: <field name="phone"/></div>
                    <div> Email: <field name="email"/></div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- action of property setup -->

    <record id="property_action_window" model="ir.actions.act_window">
      <field name="name">Hotel Property</field>
      <field name="res_model">property.property</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="property_menu" name="1. Hotel Property Setup" parent="hotel_menu_1" sequence="10" action="property_action_window"/>

