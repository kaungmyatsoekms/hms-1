      <field name="name">Room Facility</field>
      <field name="res_model">room.facility</field>
      <field name="view_mode">form</field>
    </record>

    <menuitem id="room_facility_menu" name="3. Room Facility Setup" parent="hotel_menu_2" sequence="10" action="room_facility_action_window"/>

