      <field name="name">room.facility.type.view.form</field>
      <field name="model">room.facility.type</field>
      <field name="arch" type="xml">
        <form string="Room Facility Type">
         <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
          </group>
         </sheet>
        </form>
      </field>
    </record>

    <record id="room_facility_type_action_window" model="ir.actions.act_window">
      <field name="name">Room Facility Type</field>
      <field name="res_model">room.facility.type</field>
      <field name="view_mode">form</field>
