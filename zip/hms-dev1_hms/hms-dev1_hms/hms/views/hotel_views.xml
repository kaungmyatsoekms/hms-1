      </field>
    </record>

    <!-- Hotel Room List View -->

    <record id="room_view_list" model="ir.ui.view">
      <field name="name">room.view.list</field>
      <field name="model">room.room</field>
      <field name="arch" type="xml">
        <tree string="Room Setup">
          <field name="room_no"/>
          <field name="roomtype_code"/>
          <field name="roomview_code"/>
          <field name="roomfacility_code"/>
          <field name="roomrate_code"/>
          <field name="roombed_qty"/>
          <field name="room_size"/>
          <field name="room_extension"/>
          <field name="room_des"/>
          <field name="room_img"/>
        </tree>
      </field>
    </record>

    <!-- action of room setup -->

    <record id="room_action_window" model="ir.actions.act_window">
      <field name="name">Room Setup</field>
      <field name="res_model">room.room</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="room_menu" name="4. Room Setup" parent="hotel_menu_2" sequence="10" action="room_action_window"/>

  </data>
</odoo>