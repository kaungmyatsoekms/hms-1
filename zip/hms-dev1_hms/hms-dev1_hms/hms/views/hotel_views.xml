    <!-- ========== Hotel Room Setup ========== -->
    <!-- Hotel Room Setup Form View -->

    <record id="room_view_form" model="ir.ui.view">
      <field name="name">room.view.form</field>
      <field name="model">room.room</field>
      <field name="arch" type="xml">
