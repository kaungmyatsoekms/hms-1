    <menuitem id="room_location_menu" name="3. Room Location Setup" parent="hotel_menu_1" sequence="10" action="room_location_action_window"/>

    <record id="area_type_action_window" model="ir.actions.act_window">
      <field name="name">Area Type</field>
      <field name="res_model">area.type</field>
      <field name="view_mode">form</field>
    </record>
  
    <!-- ========== Room Type Setup ========== -->
    <!-- Room Type Setup Form View -->

    <record id="room_type_view_form" model="ir.ui.view">
      <field name="name">room.type.view.form</field>
      <field name="model">room.type</field>
      <field name="arch" type="xml">
        <form string="Room Type">
          <sheet>
            <h2>Room Type Setup Form</h2>
            <br></br>
            <group>
              <field name="name"/>
              <field name="code"/>
              <field name="rate"/>
              <field name="bedqty"/>
              <field name="roomtotal"/>
              <field name="description"/>
              <field name="img" widget="image" class="float-left oe_avatar"/>
            </group>
          </sheet>
        </form>
      </field> 
    </record>

    <!-- action of room type setup -->

    <record id="room_type_action_window" model="ir.actions.act_window">
      <field name="name">Room Type</field>
      <field name="res_model">room.type</field>
      <field name="view_mode">form</field>
