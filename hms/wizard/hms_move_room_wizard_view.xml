<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="move_room_wiz" model="ir.ui.view">
      <field name="name">Move Room</field>
      <field name="model">hms.move_room_wizard</field>
      <field name="arch" type="xml">
        <form string="Move Room">
          <p style="font-weight:bold;">
              Add Your Room Number
          </p>
          <group>
            <field name="property_id"/>
            <field name="avail_rooms" invisible="1"/>
            <field name="room_no" options="{'no_quick_create':True, 'no_create_edit':True, 'no_edit':True}"/>
          </group>
          <footer>
            <button name="action_move_room_wiz" string="OK" type="object" context="{'active_id':active_id}" class="btn-primary"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_move_room_wiz" model="ir.actions.act_window">
        <field name="name">Move Room</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hms.move_room_wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'active_id':active_id}</field>
        <field name="target">new</field>
    </record>

</odoo>