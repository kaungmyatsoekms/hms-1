<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_checkin_line_wiz" model="ir.ui.view">
        <field name="name">Check-In Information</field>
        <field name="model">hms.rsvn_checkin_line_wizard</field>
        <field name="arch" type="xml">
            <form string="Check-In Information">
                <p style="font-weight:bold;">
                    Enter the Required Information to Check-In
                </p>
                <group>
                    <group>
                        <field name="reservation_line_id" invisible="1"/>
                        <field name="reservation_no" readonly="1"/>
                        <field name="guest_name" options="{'no_quick_create': True}" context="{'default_company_type' : 'guest','default_is_from_hms': True}"/>
                        <field name="group_name" options="{'no_quick_create': True}" context="{'default_company_type' : 'group','default_is_from_hms': True}"/>
                        <field name="nationality_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="pax"/>
                        <field name="child"/>
                        <field name="extrabed"/>
                        <field name="child_bfpax"/>
                    </group>
                </group>
                <footer>
                    <button name="action_checkin_line_wiz" string="OK" type="object" context="{'active_id':active_id}" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_checkin_line_wiz" model="ir.actions.act_window">
        <field name="name">Check-In Information</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hms.rsvn_checkin_line_wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'active_id':active_id}</field>
        <field name="target">new</field>
    </record>

    <record id="view_checkin_message_wiz" model="ir.ui.view">
        <field name="name">Message</field>
        <field name="model">hms.checkin_message_wizard</field>
        <field name="arch" type="xml">
            <form string="Message">
                <separator string="Message" colspan="6"/>
                <field name="text" colspan="4" nolabel="1" readonly="1" widget="html"/>
                <newline/>
                <separator colspan="6"/>
                <footer>
                    <button string="OK" class="oe_highlight" special="cancel"/>
                    <!-- <button string="Cancel" class="btn-secondary" special="cancel"/> -->
                </footer>
            </form>
        </field>
    </record>

    <record id="action_checkin_message_wiz" model="ir.actions.act_window">
        <field name="name">Required Information Message for Check-In</field>
        <field name="res_model">hms.checkin_message_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>