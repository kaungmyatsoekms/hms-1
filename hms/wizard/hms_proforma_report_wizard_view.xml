<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Wizard for Proforma -->
    <record id="proforma_report_wiz" model="ir.ui.view">
        <field name="name">Proforma</field>
        <field name="model">hms.proforma_report_wizard</field>
        <field name="arch" type="xml">
            <form string="Proforma Report">
                <separator colspan="1" string="Choose Reservation"/>
                <group>
                    <group>
                        <field name="rsvn_line_id" style="width:50%%" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    </group>
                </group>
                <footer>
                    <button name="get_report" string="Get Report" class="btn-primary" type="object" icon="fa-bars"/>
                    <button special="cancel" string="Cancel" class="btn-secondary" icon="fa-close"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_proforma_report_wiz" model="ir.actions.act_window">
        <field name="name">Proforma Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hms.proforma_report_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_proforma_report_wizard" name="Proforma Report" action="action_proforma_report_wiz" parent="hms_menu_report" sequence="5"/>
</odoo>