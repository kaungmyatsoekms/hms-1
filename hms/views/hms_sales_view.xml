                    <page id="aml_tab" string="Journal Items" groups="account.group_account_user">
                        <field name="line_ids" context="{'line_ids': line_ids, 'journal_id': journal_id, 'default_partner_id': commercial_partner_id, 'default_currency_id': currency_id != company_currency_id and currency_id or False}">
                            <tree editable="bottom" string="Journal Items" decoration-muted="display_type in ('line_section', 'line_note')">
