<odoo>
    <data>
        <record id="view_order_form_extension" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group[1]" position="replace">
                    <group>
                        <group>
                            <field name="property_id" string="Property"/>
                            <field name="partner_id" string="Guest Name" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" options='{"always_reload": True}'/>
                            <field name="partner_invoice_id" invisible="1" groups="sale.group_delivery_invoice_address" context="{'default_type':'invoice'}" options='{"always_reload": True}'/>
                            <field name="partner_shipping_id" invisible="1" groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery'}" options='{"always_reload": True}'/>
                            <field name="company_id" string="Company"/>
                            <field name="group_id" string="Group Name"/>
                        </group>
                        <group>
                            <field name="validity_date" attrs="{'invisible': [('state', 'in', ['sale', 'done'])]}"/>
                            <div class="o_td_label" groups="base.group_no_one" attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}">
                                <label for="date_order" string="Quotation Date"/>
                            </div>
                            <field name="date_order" nolabel="1" groups="base.group_no_one" attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
                            <div class="o_td_label" attrs="{'invisible': [('state', 'in', ['draft', 'sent'])]}">
                                <label for="date_order" string="Order Date"/>
                            </div>
                            <field name="date_order" attrs="{'required': [('state', 'in', ['sale', 'done'])], 'invisible': [('state', 'in', ['draft', 'sent'])]}" nolabel="1"/>
                            <field name="pricelist_id" groups="product.group_product_pricelist" options="{'no_quick_create': True, 'no_open':True, 'no_create_edit': True}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_term_id" options="{'no_quick_create': True, 'no_open':True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//notebook/page[1]" position="replace">
                    <page string="Order Lines" name="order_lines">
                        <field name="order_line" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}">
                            <tree string="Sales Order Lines" editable="bottom" decoration-info="(not display_type and invoice_status == 'to invoice')">
                                <field name="sequence" widget="handle"/>
                                <field name="display_type" invisible="1"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <field name="product_updatable" invisible="1"/>
                                <field name="product_id" invisible="1"/>
                                <field name="property_id" invisible="1"/>
                                <field name="reservation_line_id" invisible="1"/>
                                <field name="transaction_date"/>
                                <field name="transaction_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="name"/>
                                <field name="product_uom_qty" string="Rooms" context="{'partner_id': parent.partner_id,'quantity': product_uom_qty,'pricelist': parent.pricelist_id,'uom': product_uom,'company_id': parent.company_id}"/>
                                <field name="qty_delivered" invisible="1"/>
                                <field name="qty_invoiced" invisible="1"/>
                                <field name="product_uom" invisible="1"/>
                                <field name="customer_lead" invisible="1"/>
                                <field name="price_unit" widget="monetary" readonly="1"/>
                                <field name="svc_amount" readonly="1"/>
                                <field name="tax_id" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="price_tax" widget="monetary" readonly="1"/>
                                <field name="price_subtotal" widget="monetary" readonly="1"/>
                                <field name="price_total" widget="monetary" readonly="1"/>
                                <field name="discount" invisible="1"/>
                                <field name="state" invisible="1"/>
                                <field name="invoice_status" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="ref"/>
                            </tree>
                        </field>
                        <group name="note_group" col="6">
                            <group colspan="4">
                                <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="service_charge" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="oe_clear"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>