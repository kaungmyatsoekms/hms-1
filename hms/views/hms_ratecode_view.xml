<odoo>
    <data>
        <!-- Rate Code Header Form View -->
        <record id="rate_code_header_view_form" model="ir.ui.view">
            <field name="name">ratecode.header.form</field>
            <field name="model">ratecode.header</field>
            <field name="arch" type="xml">
                <form string="Rate Code">
                <sheet>
                    <separator string="Rate Code" colspan="4" />
                    <field name="property_id"/>   
                    <group>
                        <group>
                            <field name="rate_category_id" style="width:50%%"/>
                            <field name="rate_code" default_focus="1" placeholder="Rate Code " style="width:50%%"/>
                            <field name="ratecode_name" placeholder="Description" style="width:50%%"/>
                            <field name="is_ratecode" invisible='1'/>                               
                        </group>
                        <group>                                    
                            <field name="start_date" style="width:50%%"/>
                            <field name="end_date" style="width:50%%"/>
                            <field name="ratecode_type" style="width:50%%"/>
                        </group>
                    </group>
                    <!-- <div class="o_address_format">
                        <field name="transaction_ids" invisible='1'/>
                        <label for="transaction_id" string="Trans#" style="width:5.5%%"/>
                        <field name="transcation_id" options="{'no_quick_create':True, 'no_create_edit':True, 'no_edit':True}" style="width:20%%"/>
                        <label for="ratecode_type" string=" " style="width:1.5%%"/>
                        <label for="ratecode_type" string="Type" style="width:6%%"/>
                    </div> -->
                    <notebook>
                        <page string="Rate Code Details">
                            <field name="ratecode_details" context="{'default_property_id':property_id}" mode="kanban" />  
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>

        <!-- Rate Code List View Header -->
        <record id="rate_code_header_view_list" model="ir.ui.view">
            <field name="name">ratecode.header.list</field>
            <field name="model">ratecode.header</field>
            <field name="arch" type="xml">
                <tree string="Rate Code">
                    <field name="rate_category_id"/>
                    <field name="rate_code"/>
                    <field name="ratecode_name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <!-- action of Rate Code Header -->
        <record id="rate_code_header_action_window" model="ir.actions.act_window">
            <field name="name">Rate Code</field>
            <field name="res_model">ratecode.header</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Rate Code Details Form View-->
        <record id="ratecode_detail_view_form" model="ir.ui.view">
            <field name="name">ratecode.details.form</field>
            <field name="model">ratecode.details</field>
            <field name="arch" type="xml">
                <form string="Rate Code Details">
                    <sheet>
                        <group>
                            <field name="property_id"/>
                        </group>
                        <group>
                            <group>
                                <field name="season_code" style="width:50%%"/>
                                <field name="roomtype_ids" invisible='1'/>
                                <field name="roomtype_id" style="width:50%%"/>
                            </group>
                            <group>                                                                 
                                <field name="start_date" style="width:50%%"/>
                                <field name="end_date" style="width:50%%"/>
                            </group>
                        </group>
                        <separator string="Rate Code Details" colspan="4" /> 
                        <group colspan="3" col="3">
                            <group>
                                <field name="normal_price1"/>
                                <field name="normal_price2"/>
                                <field name="normal_price3"/>
                                <field name="normal_price4"/>
                                <field name="normal_extra"/>
                            </group>
                            <group>
                                <field name="weekend_price1"/>
                                <field name="weekend_price2"/>
                                <field name="weekend_price3"/>
                                <field name="weekend_price4"/>
                                <field name="weekend_extra"/>
                            </group>
                        </group>
                        <group>    
                            <group>
                                <field name="special_price1"/>
                                <field name="special_price2"/>
                                <field name="special_price3"/>
                                <field name="special_price4"/>
                                <field name="special_extra"/>
                            </group>
                            <group></group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Rate Code Details Tree View-->
        <record id="ratecode_detail_view_tree" model="ir.ui.view">
            <field name="name">ratecode.details.tree</field>
            <field name="model">ratecode.details</field>
            <field name="arch" type="xml">
                <tree name="Rate Code Details">
                    <field name="property_id"/>
                    <field name="season_code"/>
                    <field name="roomtype_ids" invisible='1'/>
                    <field name="roomtype_id" options="{'no_quick_create':True, 'no_create_edit':True, 'no_edit':True}"/>
                    <field name="start_date"/>
                    <field name="end_date" />
                    <field name="normal_price1" sum="Base Rate"/>
                    <field name="normal_price2" sum="Base Rate"/>
                    <field name="normal_price3" sum="Base Rate"/>
                    <field name="normal_price4" sum="Base Rate"/>
                    <field name="normal_extra"/>
                    <field name="weekend_price1" sum="Weekend Rate"/>
                    <field name="weekend_price2" sum="Weekend Rate"/>
                    <field name="weekend_price3" sum="Weekend Rate"/>
                    <field name="weekend_price4" sum="Weekend Rate"/>
                    <field name="weekend_extra"/>
                </tree>
            </field>
        </record>

        <!-- action of Rate Code Details -->
        <record id="ratecode_detail_action_window" model="ir.actions.act_window">
            <field name="name">Rate Code Details</field>
            <field name="res_model">ratecode.details</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
