<odoo>
    <record forcecreate="True" id="night_audit_auto" model="ir.cron">
        <field name="name">HMS Run Night Audit Daily</field>
        <field name="model_id" ref="model_hms_property"/>
        <field name="state">code</field>
        <field name="code">model.action_night_audit_auto()</field>
        <field name="user_id" ref="base.user_root"/>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
        <field name="numbercall">-1</field>
        <field name="doall">1</field>
    </record>

    <record model="ir.cron" id="cron_update_users">
        <field name='name'>Update user roles</field>
        <field name='interval_number'>3</field>
        <field name='interval_type'>hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall" eval="False" />
        <field name="model_id" ref="model_res_users_role" />
        <field name="state">code</field>
        <field name="code">model.cron_update_users()</field>
    </record>

