<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_expected_arrival_qweb">
        <t t-call="web.html_container">
            <div class="page">
                <div class="row">
                    <h4>
                        <span t-esc="property_id"/>
                    </h4>
                </div>
                <div class="row">
                    <h5>
                        <strong>
                            <strong>Expected Arrival by 
                                <t t-if="type_ == 'group'">
                                    Company
                                </t>
                                <t t-if="not type_ == 'group'">
                                    Individual
                                </t>
                            </strong>
                        </strong>
                    </h5>
                </div>
                <div class="row mt16 mb16">
                    <strong>Report Date:</strong>
                    <span t-esc="arr_date"/>
                </div>
                <div class="row">
                    <p>Printed Date : 
                        <script>
                document.write(new Date().toLocalDateString());
                        </script>
                    </p>
                </div>
                <table class="table" style="width:100%;border: 3px solid darkgray;padding:5px 5px 5px;font-size:15px;">
                    <thread>
                        <!-- Room Rmty Rm  Ad Ch GuestName BookRef VIP Arr.Date Flight Time Dep.Date  Flight Time Company F/O Remark/ Billing -->
                        <tr>
                            <th style="width:5%; solid lightgray;">
                                    Room
                            </th>
                            <th style="width:4%; solid lightgray;">
                                    Rmty
                            </th>
                            <th style="width:3%; solid lightgray;">
                                    Rm
                            </th>
                            <th style="width:2%; solid lightgray;">
                                    Ad
                            </th>
                            <th style="width:2%; solid lightgray;">
                                    Ch
                            </th>
                            <th style="width:12%; solid lightgray;">
                                    Guest Name
                            </th>
                            <th style="width:8%; solid lightgray;">
                                    Book Ref
                            </th>
                            <th style="width:4%; solid lightgray;">
                                   VIP
                            </th>
                            <th style="width:8%; solid lightgray;">
                                    Arr.Date
                            </th>
                            <th style="width:5%; solid lightgray;">
                                    Flight
                            </th>
                            <th style="width:5%; solid lightgray;">
                                    Time
                            </th>
                            <th style="width:8%; solid lightgray;">
                                    Dep.Date
                            </th>
                            <th style="width:5%; solid lightgray;">
                                    Flight
                            </th>
                            <th style="width:5%; solid lightgray;">
                                    Time
                            </th>
                            <th style="width:8%; solid lightgray;">
                                    Company
                            </th>
                            <th style="width:7%; solid lightgray;">
                                    F/O
                            </th>
                            <th style="width:14%; solid lightgray;">
                                    Remark/ Billing
                            </th>
                        </tr>
                    </thread>
                </table>

                <table style="padding:5px 5px 5px 5px;width:100%;">
                    <tbody style="background:white;">
                        <tr>
                            <td>Date                                                
                            </td>
                            <!-- Room Rmty Rm  Ad Ch GuestName BookRef VIP Arr.Date Flight Time Dep.Date  Flight Time Company F/O Remark/ Billing -->
                            <tr t-foreach="get_expected_arrival" t-as="info" style="padding:10px 5px 5px 5px;">
                                <td style="width:5%; solid lightgray;">
                                    <span t-field="info.room_no.room_no"/>
                                </td>
                                <td style="width:4%; solid lightgray;">
                                    <span t-field="info.room_type.code"/>
                                </td>
                                <td style="width:3%; solid lightgray;">
                                    <span t-field="info.rooms"/>
                                </td>
                                <td style="width:2%; solid lightgray;">
                                    <span t-field="info.pax"/>
                                </td>
                                <td style="width:2%; solid lightgray;">
                                    <span t-field="info.child"/>
                                </td>
                                <td style="width:12%; solid lightgray;">
                                    <span t-field="info.guest_id.name"/>
                                </td>
                                <td style="width:8%; solid lightgray;">
                                    <!-- booking reference -->
                                </td>
                                <td style="width:4%; solid lightgray;">
                                    <!-- VIP -->
                                </td>
                                <td style="width:8%; solid lightgray;">
                                    <span t-field="info.arrival"/>
                                </td>
                                <td style="width:5%; solid lightgray;">
                                    <span t-field="info.arrival_flight"/>
                                </td>
                                <td style="width:5%; solid lightgray;">
                                    <span t-field="info.arrival_flighttime"/>
                                </td>
                                <td style="width:8%; solid lightgray;">
                                    <span t-field="info.departure"/>
                                </td>
                                <td style="width:5%; solid lightgray;">
                                    <span t-field="info.dep_flight"/>
                                </td>
                                <td style="width:5%; solid lightgray;">
                                    <span t-field="info.dep_flighttime"/>
                                </td>
                                <td style="width:8%; solid lightgray;">
                                    <span t-field="info.company_id.name"/>
                                </td>
                                <td style="width:7%; solid lightgray;">
                                    <!-- FO -->
                                </td>
                                <td style="width:14%; solid lightgray;">
                                    <span t-field="info.fo_remark"/>
                                </td>
                            </tr>
                        </tr>

                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>

