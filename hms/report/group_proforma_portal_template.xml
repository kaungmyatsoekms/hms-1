<odoo>

    <template id="portal_my_home_menu_group_proforma" name="Portal layout : Proforma menu" inherit_id="portal.portal_breadcrumbs" priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'group_proforma'" t-attf-class="breadcrumb-item #{'active ' if not invoice else ''}">
                <a t-if="reservation" t-attf-href="/my/reservation?{{ keep_query() }}">Proforma Invoice</a>
                <t t-else="">Proforma Invoice</t>
            </li>
            <li t-if="reservation" class="breadcrumb-item active">
                <t t-esc="reservation.confirm_no" t-if="reservation.confirm_no != '/'"/>
                <t t-else=""><em>Proforma Invoice</em></t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_group_proforma" name="Portal My Home : Proforma invoice" inherit_id="portal.portal_my_home" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="invoice_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Proforma Invoice</t>
                <t t-set="url" t-value="'/my/reservation'"/>
                <t t-set="count" t-value="invoice_count"/>
            </t>
        </xpath>
    </template>

