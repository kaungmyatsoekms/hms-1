<?xml version="1.0" ?>
<odoo>
    <data>
        <!-- PRO-FORMA INVOICE MAIL TEMPLATE -->
        <record id="pro_forma_template" model="mail.template">
            <field name="name">Proforma Invoices</field>
            <field name="model_id" ref="hms.model_hms_reservation_line"/>
            <field name="email_from">${(object.reservation_user_id.email_formatted) | safe}</field>
            <!-- <field name="partner_to">${object.contact_id.id}</field> -->
            <field name="email_to">${object.guest_id.email}</field>
            <field name="subject">${object.property_id.name} ${object.state in ('reservation', 'booking') and 'Quotation' or 'Order'} (Ref ${object.confirm_no or 'n/a' })</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        % set doc_name = 'quotation' if object.state in ('reservation', 'booking') else 'order'
                        Hello,
                        <br/><br/>
                        Your
                        Pro forma invoice for ${doc_name} <strong>${object.confirm_no}</strong>
                        amounting in <strong>${format_amount(object.amount_total, object.currency_id)}</strong> is available.
                        <br/><br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="proforma_report_id"/>
            <field name="report_name">Pro-Forma invoice</field>
            <field name="lang">${object.guest_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>

        <!-- PRO-FORMA INVOICE MAIL TEMPLATE -->
        <record id="group_proforma_template" model="mail.template">
            <field name="name">Proforma Invoices</field>
            <field name="model_id" ref="hms.model_hms_reservation"/>
            <field name="email_from">${(object.user_id.email_formatted) | safe}</field>
            <!-- <field name="partner_to">${object.contact_id.id}</field> -->
            <field name="email_to">${object.guest_id.email}</field>
            <field name="subject">${object.property_id.name} ${object.state in ('reservation', 'booking') and 'Quotation' or 'Order'} (Ref ${object.confirm_no or 'n/a' })</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        % set doc_name = 'quotation' if object.state in ('reservation', 'booking') else 'order'
                        Hello,
                        <br/><br/>
                        Your
                        Pro forma invoice for ${doc_name} <strong>${object.confirm_no}</strong>
                        amounting in -----K is available.
                        <br/><br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="group_proforma_report_id"/>
            <field name="report_name">Pro-Forma invoice</field>
            <field name="lang">${object.guest_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>

        <!-- CONFIRM LETTER TEMPLATE -->
        <record id="confirm_letter_template" model="mail.template">
            <field name="name">Confirm Letter</field>
            <field name="model_id" ref="hms.model_hms_reservation"/>
            <field name="email_from">${(object.sales_id.email_formatted or user.email_formatted) |safe}</field>
            <field name="email_to">${object.guest_id.email}</field>
            <field name="subject">${object.sales_id.company_id.name} Confirm Letter ${object.confirm_no}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                        % if object.guest_id.parent_id:
                            ${object.guest_id.name} (${object.guest_id.parent_id.name}),
                        % else:
                            ${object.guest_id.name},
                        % endif
                        <br /><br />
                        Here is your reservation ${object.confirm_no} to ${object.property_id.name}.
                        % if object.state == 'confirm':
                            This reservation is confirmed. 
                        % else:
                            Please confirm your reservation at your earliest convenience.
                        % endif
                        <br /><br />
                        Do not hesitate to contact us if you have any questions.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="confirm_letter_report"/>
            <field name="report_name">Confirm Letter</field>
            <field name="lang">${object.guest_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="False"/>
        </record>

    </data>
</odoo>