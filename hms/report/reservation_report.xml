<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom Report for Property -->
    <report id="property_report_id" string="Property Report" model="hms.property" report_type="qweb-pdf" name="hms.report_property_qweb" menu="False"/>
    <record id="property_report" model="ir.actions.report">
        <field name="name">Property Report</field>
        <field name="model">report.hms.report_property_qweb</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hms.report_property_qweb</field>
    </record>

    <!-- Print Button for Property -->
    <report id="property_reports" string="Property (PDF)" model="hms.property" report_type="qweb-pdf" file="hms.report_simple_property" name="hms.report_simple_property" print_report_name="'Property - %s' % (object.name)"/>

    <!-- Custom Report for Reservation List -->
    <report id="reservation_report_id" string="Reservation Report" model="hms.reservation.line" report_type="qweb-pdf" name="hms.report_reservation_qweb" menu="False"/>
    <record id="reservation_report" model="ir.actions.report">
        <field name="name">Reservation Report</field>
        <field name="model">report.hms.report_reservation_qweb</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hms.report_reservation_qweb</field>
    </record>

    <!-- Print Button for Reservation -->
    <report id="reservation_reports" string="Reservation (PDF)" model="hms.reservation.line" report_type="qweb-pdf" file="hms.report_simple_reservation_list" name="hms.report_simple_reservation_list" print_report_name="'Reservation - %s' % (object.property_id.name)"/>

    <!-- Custom Report for Expected Arrival -->
    <report id="expected_arrival_report_id" string="Expected Arrival" model="hms.reservation.line" report_type="qweb-pdf" name="hms.report_expected_arrival_qweb" menu="False"/>
    <record id="expected_arrival_report" model="ir.actions.report">
        <field name="name">Expected Arrival Report</field>
        <field name="model">report.hms.report_expected_arrival_qweb</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hms.report_expected_arrival_qweb</field>
    </record>

    <!-- Custom Report for In House -->
    <report id="inhouse_report_id" string="In House List" model="hms.reservation.line" report_type="qweb-pdf" name="hms.report_in_house_qweb" menu="False"/>
    <record id="inhouse_report" model="ir.actions.report">
        <field name="name">In House Report</field>
        <field name="model">report.hms.report_in_house_qweb</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hms.report_in_house_qweb</field>
    </record>

    <report 
        id="action_report_proforma"
        string="Quotation / Order"
        model="hms.reservation.line" 
        report_type="qweb-pdf"
        file="hms.report_proforma" 
        name="hms.report_proforma"
        print_report_name="(object.state in ('booking', 'reservation') and 'Quotation - %s' % (object.confirm_no)) or 'Order - %s' % (object.confirm_no)"
    />

</odoo>