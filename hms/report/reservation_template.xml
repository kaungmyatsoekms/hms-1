<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_reservation_qweb">
        <t t-call="web.html_container">
            <div class="page">
                <div class="row">
                    <div class="column" style="width:50%;float:left;line-height:15pt;">
                        <h1>
                            <span t-esc="property_name"/>
                        </h1>
                        <h3>Reservation List</h3>
                    </div>
                    <div class="column" style="width:18%;float:right;line-height:7pt;">
                        <h5 style="text-align:right;">Page: 1</h5>
                        <h4 style="line-height:1pt;">Report Date: 
                            <span t-esc="system_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/>
                        </h4>
                        <strong>
                            <h4 id="date" style="line-height:8pt;">
                                <script>
                                var d = new Date();            
                                var mm = d.getMonth()+1; 
                                var dd =  d.getDate();
                                var year = d.getFullYear();
                                var seconds = d.getSeconds();
                                var minutes = d.getMinutes();
                                var hour = d.getHours();                           
                              document.getElementById("date").innerHTML ="Printed Date:  "+ dd+"/"+mm+"/"+year+" "+hour+":"+minutes+":"+seconds;
                                </script>
                            </h4>
                        </strong>
                    </div>
                </div>
                <!-- header start -->
                <table class="table table-condensed" style="width:100%;border: 3px solid darkgray;font-size:16px;">
                    <thread>
                        <tr>
                            <th style="width:5%; solid lightgray;">
                                    Room
                            </th>
                            <th style="width:4%; solid lightgray;">
                                    Rmty
                            </th>
                            <th style="width:3%; solid lightgray;">
                                    Rm
                            </th>
                            <th style="width:2%; solid lightgray;">
                                    Ad
                            </th>
                            <th style="width:2%; solid lightgray;">
                                    Ch
                            </th>
                            <th style="width:12%; solid lightgray;">
                                    Guest Name
                            </th>
                            <th style="width:8%; solid lightgray;">
                                    Book Ref
                            </th>
                            <th style="width:4%; solid lightgray;">
                                   VIP
                            </th>
                            <th style="width:8%; solid lightgray;">
                                    Arr.Date
                            </th>
                            <th style="width:5%; solid lightgray;">
                                    Flight
                            </th>
                            <th style="width:5%; solid lightgray;">
                                    Time
                            </th>
                            <th style="width:8%; solid lightgray;">
                                    Dep.Date
                            </th>
                            <th style="width:5%; solid lightgray;">
                                    Flight
                            </th>
                            <th style="width:5%; solid lightgray;">
                                    Time
                            </th>
                            <th style="width:8%; solid lightgray;">
                                    Company
                            </th>
                            <th style="width:7%; solid lightgray;">
                                    F/O
                            </th>
                            <th style="width:14%; solid lightgray;">
                                    Remark/ Billing
                            </th>
                        </tr>
                    </thread>
                </table>
                <!-- header end -->

                <!-- body start -->
                <t t-set="i" t-value="0"></t>
                <t t-set="l" t-value="0"></t>
                <t t-set="date1" t-value="0"></t>
                <t t-set="date2" t-value="0"></t>
                <t t-set="date3" t-value="0"></t>
                <t t-set="rm" t-value="0"></t>
                <t t-set="ad" t-value="0"></t>
                <t t-set="sub_rm" t-value="0"></t>
                <t t-set="sub_ad" t-value="0"></t>
                <t t-set="sub_state" t-value="false"></t>
                <t t-foreach="get_reservation_list" t-as="info">
                    <t t-set="l" t-value="0"></t>
                    <t t-set="i" t-value="i+1"></t>
                    <t t-foreach="get_reservation_list" t-as="inf">
                        <t t-set="l" t-value="l+1"></t>
                    </t>
                    <t t-set="date2" t-value="info.arrival"></t>
                    <t t-set="rm" t-value="rm+info.rooms"></t>
                    <t t-set="ad" t-value="ad+info.pax"></t>
                    <t t-set="sub_rm" t-value="sub_rm+info.rooms"></t>
                    <t t-set="sub_ad" t-value="sub_ad+info.pax"></t>

                    <t t-if="date1 == 0">
                        <t t-set="date1" t-value="info.arrival"></t>
                        <t t-set="date3" t-value="0"></t>
                        <div style="margin-top:12px;margin-bottom:5px;">
                            <strong style="border-bottom:1px solid grey;">Date: <span t-esc="info.arrival"/>
                            </strong>
                        </div>
                    </t>
                    <t t-if="date2 == date1">
                        <table class="table" style="width:100%;font-size:14px;padding:0px 0px 0px 14px;">
                            <tbody style="background:white;padding:3px 3px 3px 3px;">
                                <tr>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.room_no.room_no"/>
                                    </td>
                                    <td style="width:4%; solid lightgray;">
                                        <span t-field="info.room_type.code"/>
                                    </td>
                                    <td style="width:3%; solid lightgray;">
                                        <span t-field="info.rooms"/>
                                    </td>
                                    <td style="width:2%; solid lightgray;">
                                        <span t-field="info.pax"/>
                                    </td>
                                    <td style="width:2%; solid lightgray;">
                                        <span t-field="info.child"/>
                                    </td>
                                    <td style="width:12%; solid lightgray;">
                                        <span t-field="info.guest_id.name"/>
                                    </td>
                                    <td style="width:8%; solid lightgray;">
                                        <!-- booking reference -->
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <!-- VIP -->
                                    </td>
                                    <td style="width:8%; solid lightgray;">
                                        <span t-field="info.arrival"/>
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.arrival_flight"/>
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.arrival_flighttime"/>
                                    </td>
                                    <td style="width:8%; solid lightgray;">
                                        <span t-field="info.departure"/>
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.dep_flight"/>
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.dep_flighttime"/>
                                    </td>
                                    <td style="width:8%; solid lightgray;">
                                        <span t-field="info.company_id.name"/>
                                    </td>
                                    <td style="width:7%; solid lightgray;">
                                        <!-- FO -->
                                    </td>
                                    <td style="width:14%; solid lightgray;">
                                        <span t-field="info.fo_remark"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    <t t-if="date3==0">
                        <t t-if="date1!=date2">
                            <div>
                                <hr></hr>
                                <table class="table" style="width:16%;padding:0px 0px 0px 5px;">
                                    <tbody>
                                        <tr>
                                            <td style="width:10%;">
                                                <strong>Sub Total </strong>
                                            </td>
                                            <td style="width:3%; solid lightgray;">
                                                <span t-esc="sub_rm-1"/>
                                                <t t-set="sub_rm" t-value="0"></t>
                                            </td>
                                            <td style="width:3%; solid lightgray;">
                                                <span t-esc="sub_ad-1"/>
                                                <t t-set="sub_ad" t-value="0"></t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </t>
                    <t t-if="date2 != date1">
                        <t t-if="date3 != 0">
                            <t t-set="date1" t-value="0"></t>
                        </t>
                        <table class="table" style="width:100%;font-size:14px;padding:0px 0px 0px 14px;">
                            <tbody style="background:white;padding:3px 3px 3px 3px;">
                                <div style="margin-top:12px;margin-bottom:5px;">
                                    <strong style="border-bottom:1px solid grey;">Date: <span t-esc="info.arrival"/>
                                    </strong>
                                </div >
                                <tr>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.room_no.room_no"/>
                                    </td>
                                    <td style="width:4%; solid lightgray;">
                                        <span t-field="info.room_type.code"/>
                                    </td>
                                    <td style="width:3%; solid lightgray;">
                                        <span t-field="info.rooms"/>
                                    </td>
                                    <td style="width:2%; solid lightgray;">
                                        <span t-field="info.pax"/>
                                    </td>
                                    <td style="width:2%; solid lightgray;">
                                        <span t-field="info.child"/>
                                    </td>
                                    <td style="width:12%; solid lightgray;">
                                        <span t-field="info.guest_id.name"/>
                                    </td>
                                    <td style="width:8%; solid lightgray;">
                                        <!-- booking reference -->
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <!-- VIP -->
                                    </td>
                                    <td style="width:8%; solid lightgray;">
                                        <span t-field="info.arrival"/>
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.arrival_flight"/>
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.arrival_flighttime"/>
                                    </td>
                                    <td style="width:8%; solid lightgray;">
                                        <span t-field="info.departure"/>
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.dep_flight"/>
                                    </td>
                                    <td style="width:5%; solid lightgray;">
                                        <span t-field="info.dep_flighttime"/>
                                    </td>
                                    <td style="width:8%; solid lightgray;">
                                        <span t-field="info.company_id.name"/>
                                    </td>
                                    <td style="width:7%; solid lightgray;">
                                        <!-- FO -->
                                    </td>
                                    <td style="width:14%; solid lightgray;">
                                        <span t-field="info.fo_remark"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div>
                            <t t-if="date3==0">
                                <t t-set="sub_rm" t-value="sub_rm+1"></t>
                                <t t-set="sub_ad" t-value="sub_ad+1"></t>

                            </t>
                            <hr></hr>
                            <table class="table" style="width:16%;padding:0px 0px 0px 5px;">
                                <tbody>
                                    <tr>
                                        <td style="width:10%;">
                                            <strong>Sub Total </strong>
                                        </td>
                                        <td style="width:3%; solid lightgray;">
                                            <span t-esc="sub_rm"/>
                                            <t t-set="sub_rm" t-value="0"></t>
                                        </td>
                                        <td style="width:3%; solid lightgray;">
                                            <span t-esc="sub_ad"/>
                                            <t t-set="sub_ad" t-value="0"></t>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <t t-set="date3" t-value="date2"></t>
                    </t>
                    <t t-if="i==l">
                        <div>
                            <hr></hr>
                            <table class="table" style="width:16%;padding:0px 0px 0px 5px;">
                                <tbody>
                                    <tr>
                                        <td style="width:10%;">
                                            <strong>Sub Total </strong>
                                        </td>
                                        <td style="width:3%; solid lightgray;">
                                            <span t-esc="sub_rm"/>
                                            <t t-set="sub_rm" t-value="0"></t>
                                        </td>
                                        <td style="width:3%; solid lightgray;">
                                            <span t-esc="sub_ad"/>
                                            <t t-set="sub_ad" t-value="0"></t>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>

                <!-- body end -->
                <!-- total start-->
                <hr></hr>
                <table class="table" style="width:16%;padding:0px 0px 0px 5px;">
                    <tbody>
                        <tr>
                            <td style="width:10%;">
                                <strong>Total </strong>
                            </td>
                            <td style="width:3%; solid lightgray;">
                                <span t-esc="rm"/>
                            </td>
                            <td style="width:3%; solid lightgray;">
                                <span t-esc="ad"/>
                            </td>
                        </tr>

                    </tbody>
                </table>
                <!-- total end -->

            </div>
        </t>
    </template>
</odoo>