<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_hms_pro_forma">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="is_pro_forma" t-value="True"/>
                <t t-foreach="docs" t-as="doc">
                    <t t-set="doc" t-value="doc.with_context(lang=doc.reservation_user_id.lang)" />
                    <t t-set="address">
                        <div t-field="doc.reservation_user_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                        <p t-if="doc.reservation_user_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.reservation_user_id.vat"/></p>
                    </t>
                    <div class="page">
                        <div class="oe_structure"/>

                        <h2 class="mt16">
                            <span>Pro-Forma Invoice # </span>
                            <span t-field="doc.confirm_no"/>
                        </h2>

                        <div class="row mt32 mb32" id="informations">
                            <div t-if="doc.system_date" class="col-auto mw-100 mb-2">
                                <strong>Quotation Date:</strong>
                                <p class="m-0" t-field="doc.system_date" t-options='{"widget": "date"}'/>
                            </div>
                            <div t-if="doc.reservation_user_id.name" class="col-auto mw-100 mb-2">
                                <strong>Salesperson:</strong>
                                <p class="m-0" t-field="doc.reservation_user_id"/>
                            </div>
                        </div>

                        <!-- Is there a discount on at least one line? -->
                        <!-- <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/> -->

                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_date" class="text-left">Date</th>
                                    <th name="th_transaction" class="text-left">Transaction</th>
                                    <th name="th_quantity" class="text-right">Quantity</th>
                                    <th name="th_priceunit" class="text-right">Unit Price</th>
                                    <th name="th_svc" class="text-right">Service Charge</th>
                                    <th name="th_subtotal" class="text-right">Subtotal</th>
                                    <th name="th_taxes" class="text-right">Taxes</th>
                                    <th name="th_total" class="text-right">
                                        <!-- <t groups="account.group_show_line_subtotals_tax_excluded">Amount</t> -->
                                        <t groups="account.group_show_line_subtotals_tax_included">Total Price</t>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-set="current_subtotal" t-value="0"/>

                                <t t-foreach="doc.room_transaction_line_ids" t-as="line">

                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" />
                                    <!-- <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" /> -->

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section'">
                                        <t>
                                            <td name="td_date"><span t-field="line.transaction_date"/></td>
                                            <td name="td_transaction" class="text-left">
                                                <span t-field="line.transaction_id"/>
                                            </td>
                                            <td name="td_quantity" class="text-right">
                                                <span t-field="line.total_room"/>
                                            </td>
                                            <td name="td_priceunit" class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td name="td_svc" class="text-right">
                                                <span t-field="line.svc_amount"/>
                                            </td>
                                            <td name="td_subtotal" class="text-right">
                                                <span t-field="line.price_subtotal"/>
                                            </td>
                                            <td name="td_taxes" class="text-right">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                            </td>
                                            <td name="td_total" class="text-right o_price_total">
                                                <!-- <span t-field="line.price_subtotal" /> -->
                                                <span t-field="line.price_total" />
                                            </td>
                                        </t>
                                    </tr>

                                    <!-- <tr class="is-subtotal text-right">
                                        <td name="td_section_subtotal" colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                            />
                                        </td>
                                    </tr> -->
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix" name="so_total_summary">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                    <table class="table table-sm">
                                        <tr class="border-black o_subtotal" style="">
                                            <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                            <td name="td_amount_untaxed" class="text-right">
                                                <span t-field="doc.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <tr class="border-black o_tax">
                                            <td name="td_amount_tax_label"><strong>Tax</strong></td>
                                            <td name="td_amount_tax" class="text-right">
                                                <span t-field="doc.amount_tax"/>
                                            </td>
                                        </tr>
                                        <tr class="border-black o_total">
                                            <td name="td_amount_total_label"><strong>Total</strong></td>
                                            <td name="td_amount_total" class="text-right">
                                                <span t-field="doc.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

